<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_yoy_list" model="ir.ui.view">
            <field name="name">yoy.list</field>
            <field name="model">ecems.yoy</field>
            <field name="arch" type="xml">
                <list>
                    <field name="project_id"/>
                    <field name="circuit_id"/>
                    <field name="analysis_month"/>
                    <field name="current_year"/>
                    <field name="current_value" widget="monetary"/>
                    <field name="compare_value" widget="monetary"/>
                    <field name="yoy_rate" widget="percentage" options="{'digits': [3,2]}"/>

                    <!-- 趋势分析 -->
                    <field name="trend_values" widget="sparkline"/>
                </list>
            </field>
        </record>

        <record id="view_yoy_search" model="ir.ui.view">
            <field name="name">ecems.yoy.search</field>
            <field name="model">ecems.yoy</field>
            <field name="arch" type="xml">
                <search string="同比分析模型">
                    <group expand="0" string="Group By">
                        <filter name="group_manager" string="回路名称" domain="[]" context="{'group_by':'circuit_id'}"/>
                    </group>
                    <searchpanel>
                        <field name="company_id" groups="base.group_multi_company" icon="fa-building" enable_counters="1"/>
                        <field name="circuit_id" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </search>
             </field>
        </record>

        <!-- 动作定义 -->
        <record id="action_ecems_yoy" model="ir.actions.act_window">
            <field name="name">同比分析模型</field>
            <field name="res_model">ecems.yoy</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="view_yoy_search"/>
        </record>
    </data>
</odoo>