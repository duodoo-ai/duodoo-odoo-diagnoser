<odoo>
    <menuitem
        id="ecems_main"
        name="能源管理"
        web_icon="oudu_ecems,static/description/icon.png"
        sequence="450">
        <!-- 菜单配置 -->
        <menuitem id="menu_power_monitor" name="电力监控" sequence="10">
            <menuitem id="menu_avg_power" name="平均功率因数" action="action_power_monitor"/>
        </menuitem>

        <!-- 菜单配置 -->
        <menuitem id="menu_ecems_monitoring" name="电气安全" sequence="15">
            <menuitem id="menu_ecems_electrical_safety" name="电气安全监测" action="action_ecems_electrical_safety"/>
            <menuitem id="menu_ecems_electrical_safety_history" name="电气安全历史记录" action="action_ecems_electrical_safety_history"/>
        </menuitem>

        <!-- 菜单配置 -->
        <menuitem id="menu_energy_stats" name="电能统计" sequence="20">
            <menuitem id="menu_collection" name="用电集抄" action="action_collection"/>
            <menuitem id="menu_statistics" name="用电统计" action="action_statistics"/>
            <menuitem id="menu_timeslot" name="分时段用电" action="action_timeslot"/>
            <menuitem id="menu_lineloss" name="线路损耗" action="action_lineloss"/>
        </menuitem>

        <!-- 能耗分析子菜单 -->
        <menuitem id="ecems_analysis" name="能耗分析" sequence="30">
            <menuitem id="menu_dashboard" name="能耗综合看板" action="action_energy_dashboard"/>
            <menuitem id="menu_circuit" name="支路能耗模型" action="action_ecems_circuit"/>
            <menuitem id="menu_yoy" name="同比分析模型" action="action_ecems_yoy"/>
            <menuitem id="menu_mom" name="环比分析模型" action="action_ecems_mom"/>
        </menuitem>

        <!-- 能耗主数据子菜单 -->
        <menuitem id="ecems_circuit_name" name="配置管理" sequence="40">
            <menuitem id="menu_ecems_circuit_name" name="回路主数据" action="action_ecems_circuit_name" sequence="10"/>
        </menuitem>
    </menuitem>
</odoo>