<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 回路主数据列表视图 -->
        <record id="view_circuit_name_list" model="ir.ui.view">
            <field name="name">circuit.name.list</field>
            <field name="model">ecems.circuit.name</field>
            <field name="arch" type="xml">
                <list string="回路主数据">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="voltage_level"/>
                    <field name="identification"/>
                    <field name="location"/>
                    <field name="parent_id"/>
                </list>
            </field>
        </record>

        <!-- 回路主数据表单视图 -->
        <record id="view_circuit_name_form" model="ir.ui.view">
            <field name="name">circuit.name.form</field>
            <field name="model">ecems.circuit.name</field>
            <field name="arch" type="xml">
                <form string="回路主数据">
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="voltage_level" options="{'horizontal': true}" widget="radio"/>
                                <field name="identification" options="{'horizontal': true}" widget="radio"/>
                                <field name="location"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="子回路">
                                <field name="child_ids" editable="bottom">
                                    <list string="子回路">
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="voltage_level"/>
                                        <field name="identification"/>
                                        <field name="location"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_circuit_name_search" model="ir.ui.view">
            <field name="name">ecems.circuit.name.search</field>
            <field name="model">ecems.circuit.name</field>
            <field name="arch" type="xml">
                <search string="回路主数据">
                    <group expand="0" string="Group By">
                        <filter name="group_manager" string="回路目录" domain="[]" context="{'group_by':'parent_id'}"/>
                    </group>
                    <searchpanel>
                        <field name="company_id" groups="base.group_multi_company" icon="fa-building" enable_counters="1"/>
                        <field name="parent_id" icon="fa-users" enable_counters="1"/>
                    </searchpanel>
                </search>
             </field>
        </record>

        <!-- 动作定义 -->
        <record id="action_ecems_circuit_name" model="ir.actions.act_window">
            <field name="name">回路主数据</field>
            <field name="res_model">ecems.circuit.name</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="view_circuit_name_search"/>
        </record>
    </data>
</odoo>
