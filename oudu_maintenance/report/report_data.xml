<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 二维码打印 -->
        <record id='print_qr_code' model='ir.actions.report'>
            <field name='name'>Print QR Code</field>
            <field name='model'>maintenance.equipment.barcode</field>
            <field name='report_type'>qweb-pdf</field>
            <field name='report_name'>oudu_maintenance.report_equipment_barcode</field>
            <field name="binding_model_id" ref="model_maintenance_equipment_barcode" />
            <field name="binding_type">report</field>
            <!-- 自定义报告文件名 -->
            <field name="print_report_name">'QR_Report_' + (object.display_name or '') + '.pdf'</field>
        </record>

        <record id="equipment_barcode_form_print_inherit" model="ir.ui.view">
            <field name="name">maintenance.equipment.barcode.form</field>
            <field name="model">maintenance.equipment.barcode</field>
            <field name='inherit_id' ref='maintenance_equipment_barcode_form_view'/>
            <field name="arch" type="xml">
                <button name="generate_qr_code" position="after">
                    <button name="%(print_qr_code)d" string="Print QR Code" type="action" class="oe_highlight"/>
                </button>
            </field>
        </record>
    </data>
</odoo>