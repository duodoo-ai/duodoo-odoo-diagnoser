<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 二维码报告视图 -->
        <record id="view_qr_equipment_tree" model="ir.ui.view">
            <field name="name">maintenance.equipment.qr.tree</field>
            <field name="model">maintenance.equipment</field>
            <field name="arch" type="xml">
                <!-- 列表视图，标题为设备二维码报告，翻译为英文 -->
                <list string="Equipment QR Code Report">
                    <!-- 显示设备名称 -->
                    <field name="name" string="Equipment Name"/>
                    <!-- 显示设备分类 -->
                    <field name="equipment_category" string="Equipment Category"/>
                    <!-- 显示设备状态 -->
                    <field name="status" string="Status"/>
                    <!-- 显示二维码生成状态，使用布尔切换控件 -->
                    <field name="qr_code_generated" widget="boolean_toggle" string="QR Code Generated"/>
                    <!-- 显示二维码图像，宽度为 80 -->
                    <field name="qr_code" widget="image" width="80" string="QR Code"/>
                </list>
            </field>
        </record>

        <!-- 二维码报告视图扩展 -->
        <record id="view_qr_equipment_tree_extended" model="ir.ui.view">
            <field name="name">maintenance.equipment.qr.tree.extended</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="view_qr_equipment_tree"/>
            <field name="arch" type="xml">
                <!-- 在设备名称字段后添加序列号和型号字段 -->
                <xpath expr="//field[@name='name']" position="after">
                    <!-- 显示设备序列号 -->
                    <field name="serial_no" string="Serial Number"/>
                    <!-- 显示设备型号 -->
                    <field name="model" string="Model"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>