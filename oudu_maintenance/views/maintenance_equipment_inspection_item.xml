<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 列表视图 -->
    <record id="maintenance_equipment_inspection_item_list_view" model="ir.ui.view">
        <field name="name">maintenance.equipment.inspection.item.list.view</field>
        <field name="model">maintenance.equipment.inspection.item</field>
        <field name="arch" type="xml">
            <list>
                <field name="inspection_id"/>
                <field name="name"/>
                <field name="result"/>
                <field name="barcode"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- 表单视图 -->
    <record id="maintenance_equipment_inspection_item_form_view" model="ir.ui.view">
        <field name="name">maintenance.equipment.inspection.item.form.view</field>
        <field name="model">maintenance.equipment.inspection.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="inspection_id"/>
                        <field name="name"/>
                        <field name="result"/>
                        <field name="barcode"/>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="notes"/>
                    </group>
                    <div class="oe_button_box oe_right" name="button_box">
                        <button name="scan_barcode" type="object" string="Scan Barcode" class="btn-primary"/>
                    </div>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- 看板视图 -->
    <record id="maintenance_equipment_inspection_item_kanban_view" model="ir.ui.view">
        <field name="name">maintenance.equipment.inspection.item.kanban.view</field>
        <field name="model">maintenance.equipment.inspection.item</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" mobile="true">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card" style="box-shadow: 0 4px 8px rgba(0,0,0,0.1); border-radius: 8px; margin: 8px;">
                            <div class="oe_kanban_content p-3">
                                <!-- 标题 -->
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <field name="name" class="fw-bold fs-5"/>
                                    <field name="result" t-attf-class="badge bg-{{ result == 'pass' ? 'success' : result == 'fail' ? 'danger' : 'secondary' }}"/>
                                </div>
                                <!-- 设备检查信息 -->
                                <div class="mb-2">
                                    <span class="fw-semibold text-secondary me-2">Inspection:</span>
                                    <field name="inspection_id"/>
                                </div>
                                <div class="mb-2">
                                    <span class="fw-semibold text-secondary me-2">Barcode:</span>
                                    <field name="barcode"/>
                                </div>
                                <!-- 描述信息，限制显示行数 -->
                                <div class="text-muted small mb-2" t-attf-style="display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 3; overflow: hidden;">
                                    <span class="fw-semibold text-secondary me-2">Description:</span>
                                    <field name="description"/>
                                </div>
                                <!-- 操作按钮 -->
                                <div class="d-flex justify-content-end">
                                    <button name="scan_barcode" type="object" string="Scan Barcode" class="btn btn-sm btn-primary me-2"/>
                                    <button type="edit" class="btn btn-sm btn-secondary"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- 动作 -->
    <record id="maintenance_equipment_inspection_item_action" model="ir.actions.act_window">
        <field name="name">Equipment Inspection Items</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.equipment.inspection.item</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('maintenance_equipment_inspection_item_list_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('maintenance_equipment_inspection_item_form_view')}),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('maintenance_equipment_inspection_item_kanban_view')})
            ]"/>
    </record>

    <!-- 菜单项 -->
    <menuitem
        id="maintenance_equipment_inspection_item_menu"
        name="Equipment Inspection Items"
        parent="maintenance.menu_maintenance_configuration"
        action="maintenance_equipment_inspection_item_action"
        sequence="60"
    />
</odoo>

