<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 定义列表视图 -->
    <record id="maintenance_equipment_status_history_list_view" model="ir.ui.view">
        <field name="name">maintenance.equipment.status.history.list.view</field>
        <field name="model">maintenance.equipment.status.history</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="equipment_id"/>
                <field name="status"/>
                <field name="change_date"/>
            </list>
        </field>
    </record>

    <!-- 定义表单视图 -->
    <record id="maintenance_equipment_status_history_form_view" model="ir.ui.view">
        <field name="name">maintenance.equipment.status.history.form.view</field>
        <field name="model">maintenance.equipment.status.history</field>
        <field name="arch" type="xml">
            <form create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <field name="equipment_id"/>
                        <field name="status"/>
                        <field name="change_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 定义动作 -->
    <record id="maintenance_equipment_status_history_action" model="ir.actions.act_window">
        <field name="name">Equipment Status History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.equipment.status.history</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('maintenance_equipment_status_history_list_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('maintenance_equipment_status_history_form_view')})
        ]"/>
    </record>

