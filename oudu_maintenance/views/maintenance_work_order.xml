<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List view -->
    <record id="maintenance_work_order_list_view" model="ir.ui.view">
        <field name="name">maintenance.work.order.list.view</field>
        <field name="model">maintenance.work.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="order_number"/>
                <field name="name"/>
                <field name="equipment_id"/>
                <field name="assigned_to"/>
                <field name="work_order_status"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="maintenance_work_order_form_view" model="ir.ui.view">
        <field name="name">maintenance.work.order.form.view</field>
        <field name="model">maintenance.work.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="work_order_status" widget="statusbar" statusbar_visible="draft,in_progress,completed,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <field name="order_number" readonly="1"/>
                        <field name="name"/>
                        <field name="equipment_id"/>
                        <field name="request_date"/>
                        <field name="assigned_to"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <notebook>
                        <page string="History">
                            <field name="history_ids">
                                <list>
                                    <field name="event_type"/>
                                    <field name="description"/>
                                    <field name="event_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="maintenance_work_order_action" model="ir.actions.act_window">
        <field name="name">Maintenance Work Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.work.order</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('maintenance_work_order_list_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('maintenance_work_order_form_view')})
        ]"/>
    </record>
</odoo>