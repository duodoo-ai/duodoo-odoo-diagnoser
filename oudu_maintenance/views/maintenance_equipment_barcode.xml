<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 定义列表视图 -->
    <record id="maintenance_equipment_barcode_list_view" model="ir.ui.view">
        <field name="name">maintenance.equipment.barcode.list.view</field>
        <field name="model">maintenance.equipment.barcode</field>
        <field name="arch" type="xml">
            <list>
                <field name="equipment_id"/>
                <field string="Serial Number" name="serial_no" widget="statinfo"/>
                <field name="category_id"/>
                <field name="qr_code"/>
<!--                <field name="printed" optional="hide"/>-->
            </list>
        </field>
    </record>

    <!-- 定义表单视图 -->
    <record id="maintenance_equipment_barcode_form_view" model="ir.ui.view">
        <field name="name">maintenance.equipment.barcode.form.view</field>
        <field name="model">maintenance.equipment.barcode</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="generate_qr_code" string="Generate QR Code" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="equipment_id"/>
                            <field name="owner_user_id"/>
                            <field name="category_id"/>
                            <field name="partner_id"/>
                            <field name="partner_ref"/>
                            <field name="location"/>
                            <field name="model"/>
                            <field name="serial_no"/>
                            <field name="printed" readonly="1"/>
                        </group>
                        <group>
                            <field name="qr_code" readonly="1" widget="image" options="{'size': [120, 120]}"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- 定义动作 -->
    <record id="maintenance_equipment_barcode_action" model="ir.actions.act_window">
        <field name="name">Equipment Barcode</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">maintenance.equipment.barcode</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('maintenance_equipment_barcode_list_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('maintenance_equipment_barcode_form_view')})
        ]"/>
    </record>
</odoo>