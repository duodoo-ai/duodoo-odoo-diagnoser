<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- 列表视图 -->
    <record id="maintenance_equipment_inspection_list_view" model="ir.ui.view">
        <field name="name">maintenance.equipment.inspection.list</field>
        <field name="model">maintenance.equipment.inspection</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="equipment_id"/>
                <field name="inspection_date"/>
                <field name="inspector_id"/>
                <field name="result" widget="badge"/>
                <field name="photo" widget="image"/>
            </list>
        </field>
    </record>

    <!-- 表单视图 -->
    <record id="maintenance_equipment_inspection_form_view" model="ir.ui.view">
        <field name="name">maintenance.equipment.inspection.form</field>
        <field name="model">maintenance.equipment.inspection</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="equipment_id"/>
                            <field name="inspection_date"/>
                            <field name="inspector_id"/>
                            <field name="result" widget="radio" options="{'horizontal': true, 'size': [240, 240]}"/>
                        </group>
                        <group>
                            <field name="photo" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Detail Information">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- 动作配置 -->
    <record id="action_equipment_inspection" model="ir.actions.act_window">
        <field name="name">Equipment Inspection Record</field>
        <field name="res_model">maintenance.equipment.inspection</field>
        <field name="view_mode">list,kanban,form</field>
    </record>
</odoo>
