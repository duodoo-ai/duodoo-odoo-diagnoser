<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_tree_inherit_eist_erp_base" model="ir.ui.view">
        <field name="name">res.company.list.inherit.eist_erp_base</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="short_name"/>
            </xpath>
        </field>
    </record>

    <record id="view_company_form_inherit_eist_erp_base" model="ir.ui.view">
        <field name="name">res.company.form.inherit.eist_erp_base</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='phone']" position="after">
                <field name="fax" class="o_force_ltr"/>
            </xpath>

            <xpath expr="//div[hasclass('oe_title')]/h1" position="after">
                <label for="short_name"/>
                <h2>
                    <field name="short_name" placeholder="e.g. MC"/>
                </h2>
            </xpath>

            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="square_logo" widget="image" class="oe_avatar" options="{'size': [46, 46]}"/>
            </xpath>

        </field>
    </record>

</odoo>