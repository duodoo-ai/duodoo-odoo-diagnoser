    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">Base Settings</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">

            <!-- <block id="user_default_rights" position="before">
                <div id="user_default_rights">
            </block> -->
            <div id="invite_users" position="before">
                <widget name="res_config_general_navigation" />
            </div>

            <xpath expr="//block[@id='user_default_rights']" position="before">
                <div id="user_default_rights"/>
            </xpath>

            <xpath expr="//block[@name='integration']" position="before">
                <div id="integration"/>
            </xpath>

            <!-- 隐藏一般设置中的 appstore-->
            <xpath expr="//widget[@name='mobile_apps_funnel']" position="replace"/>
            <xpath expr="//widget[@name='res_config_edition']" position="replace"/>

            <xpath expr="//form/app[@name='general_settings']" position="before">
                <app data-string="ERP Settings" string="ERP Settings" name="eist_erp_base">

                    <field name="company_id" invisible="1" />
                    <setting type="header" string="Companies">
                        <field name="company_id" options="{'no_open': True, 'no_create': True}" title="Settings on this page will apply to this company." class="w-100"/>
                    </setting>

                    <div id="brand_settings">
                        <block title="Base Settings" name="eisterp_brand_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="system_name_setting">
                                <div class="o_setting_left_pane">
                                    <i class="fa fa-header" role="img" aria-label="Browser Window Title Name" title="Browser Window Title Name"></i>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="system_name" />
                                    <div class="text-muted">
                                    The title name displayed on the title bar or status bar of the
                                    browser window. Similarly, when a document is added to the
                                    user's link list or favorite or bookmark list, the title name
                                    will become the default name of the document link.
                                    </div>
                                    <div class="content-group mt8">
                                        <field name="system_name" class="fw-bold w-100" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="display_company_name" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="display_company_name" />
                                    <div class="text-muted">
                                    Displays the company name in the title bar of the browser window
                                    or in the title name on the status bar.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <i class="fa fa-copyright" role="img" aria-label="Copyright information" title="Copyright information"></i>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="copyright" class="o_light_label" />
                                    <div class="o_row">
                                        <field name="copyright" />
                                    </div>
                                    <div class="text-muted">
                                    Copyright information displayed in user menu items and footers.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <i class="fa fa-link" role="img" aria-label="Documentation URL" title="Documentation URL"></i>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="doc_url" />
                                    <div class="o_row">
                                        <field name="doc_url" />
                                    </div>
                                    <div class="text-muted">
                                    The document URL displayed in the user menu item and footer.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <i class="fa fa-link" role="img" aria-label="Support URL" title="Support URL"></i>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="support_url" />
                                    <div class="o_row">
                                        <field name="support_url" />
                                    </div>
                                    <div class="text-muted">
                                    The technical support URL displayed in the user menu item and
                                    footer.
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <i class="fa fa-picture-o" aria-label="Web Favorites Icon" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="favicon" string="Favorites Icon" />
                                    <div class="text-muted">
                                    An icon that appears in the title bar or favorites of the
                                    browser window.
                                    </div>
                                    <div class="content-group mt8">
                                        <field name="favicon" widget="image" class="float-start oe_avatar" options='{"size": [48, 48]}'/>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <i class="fa fa-picture-o" aria-label="Company Logo" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="logo" />
                                    <div class="text-muted">
                                    Company logo, which is used to display the website brand.
                                    </div>
                                    <div class="content-group mt8">
                                        <field name="logo" widget="image" class="float-start oe_avatar" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <i class="fa fa-picture-o" aria-label="Company Square Logo" />
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="square_logo" />
                                    <div class="text-muted">
                                    Company Square Logo, It is used to display the website brand when the sidebar collapses.
                                    </div>
                                    <div class="content-group mt8">
                                        <field name="square_logo" widget="image" class="float-start oe_avatar" />
                                    </div>
                                </div>
                            </div>

                        </block>

                    </div>

                    <!-- 多公司管理 -->
                    <!-- <div id="eist_multi_company">
                        <block title="Multi Company" name="eist_multi_company_settings">
                            <setting id="eist_multi_company_system_data_limit_setting" help="Limit the data access of different company system users to their own company.">
                                <field name="multi_company_system_data_limit" />
                            </setting>
                        </block>
                    </div> -->


                    <div id="eist_apps">
                        <block title="Applications" name="eist_applications_settings">

                            <setting id="eist_web_theme_setting" help="Powerful, modern, and configurable to respond to backend themes.">
                                <field name="module_eist_web_theme" string="Web Theme" />
                                <div class="content-group" invisible="not module_eist_web_theme" id="msg_eist_web_theme">
                                    <div class="mt16 text-warning">
                                        <strong>Save</strong> this page and come back here to set up the feature.
                                    </div>
                                </div>
                            </setting>

                            <setting id="eist_web_toolbox_setting" help="Provides the ability for web clients to operate hardware.">
                                <field name="module_eist_web_toolbox"/>
                                <div class="content-group" invisible="not module_eist_web_toolbox" id="msg_module_eist_web_toolbox">
                                    <div class="mt16 text-warning">
                                        <strong>Save</strong> this page and come back here to set up the feature.
                                    </div>
                                </div>
                            </setting>

                            <setting id="eist_report_management_setting" help="It provides the functions of unified report management and online report design.">
                                <field name="module_eist_report_management" string="Report Management"/>
                                <div class="content-group" invisible="not module_eist_report_management" id="msg_module_eist_report_management">
                                    <div class="mt16 text-warning">
                                        <strong>Save</strong> this page and come back here to set up the feature.
                                    </div>
                                </div>
                            </setting>

                        </block>
                    </div>

                    <div id="eist_solution">
                        <block title="Solution" name="eist_solution_settings">


                            <setting id="eist_pos_setting" help="User-friendly PoS interface for shops and restaurants.">
                                <field name="module_eist_pos" />
                                <div class="content-group" invisible="not module_eist_pos" id="msg_eist_pos">
                                    <div class="mt16 text-warning">
                                        <strong>Save</strong> this page and come back here to set up the feature.
                                    </div>
                                </div>
                            </setting>


                            <setting id="eist_social_app_setting" help="Integrate social app instant messaging features, such as social app authentication login, use social app to send notifications, sync social app organizational structure, etc.">
                                <field name="module_eist_social" />
                                <div class="content-group" invisible="not module_eist_social" id="msg_eist_social">
                                    <div class="mt16 text-warning">
                                        <strong>Save</strong> this page and come back here to set up the feature.
                                    </div>
                                </div>
                            </setting>


                        </block>
                    </div>

                    <div id="eist_extended_functionality">
                        <block title="Extended functionality" name="eist_extended_functionality_settings">

                            <setting id="eist_geolocalize_setting" help="On the basis of the original electronic map provider, the Chinese electronic map provider will be added to enhance the ability to obtain the geographical location of partners.">
                                <field name="module_eist_geolocalize" />
                                <div class="content-group" invisible="not module_eist_geolocalize" id="msg_eist_geolocalize">
                                    <div class="mt16 text-warning">
                                        <strong>Save</strong> this page and come back here to set up the feature.
                                    </div>
                                </div>

                            </setting>

                            <setting id="eist_multi_platform_setting" help="Provide multi platform client access functionality.">
                                <field name="module_eist_multi_platform" />
                                <div class="content-group" invisible="not module_eist_multi_platform" id="msg_eist_multi_platform">
                                    <div class="mt16 text-warning">
                                        <strong>Save</strong> this page and come back here to set up the feature.
                                    </div>
                                </div>

                            </setting>

                        </block>
                    </div>


                    <!-- <div id="eist_about">
                        <block title="About" name="eist_about_settings">
                            <widget name='eist_edition'/>
                        </block>
                    </div> -->

                </app>
            </xpath>


        </field>

    </record>


    <record id="action_erp_configuration" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="path">erp-config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'eist_erp_base', 'bin_size': False}</field>
    </record>

    <menuitem id="menu_erp_config" name="ERP Settings" parent="base.menu_administration" sequence="-1" action="action_erp_configuration" groups="base.group_system" />
</odoo>